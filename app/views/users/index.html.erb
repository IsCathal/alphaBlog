<h1>Alpha Bloggers</h1>
<div class="flickr_pagination">
   <%= will_paginate @user, :container => false %>
</div>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Profile</th>
      <th>Article Count</th>
      <th colspan = "3">Link To Profile</th>
      <th colspan = "5">Edit Profile</th>
      <th colspan = "5">Created Profile</th>


    </tr>

    <tbody>
      <% @user.each do |user|%>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= link_to gravator_for(user), user %></td>
        <td><%= pluralize(user.articles.count, "article") %></td>
        <td><%= link_to "View Profile", user  %></td>
        <td><%= link_to "Edit Profile", edit_user_path(user)  %></td>
        <td><%= time_ago_in_words(user.created_at)  %></td>




        
       
      <% end %>
    </tbody>
  </thead>
</table>
<div class="flickr_pagination">
   <%= will_paginate @user, :container => false %>
</div>
<p>
  <%= link_to 'Create new artile', new_article_path %>
</p>

