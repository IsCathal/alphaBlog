<% if @category.errors.any? %>
  <h2>You got an error</h2>
  <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @category, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :name, "Category" %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
