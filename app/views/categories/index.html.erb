<h1>Categories listing page</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to category.name, category_path(category) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
