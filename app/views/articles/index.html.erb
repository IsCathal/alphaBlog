<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Descriptions</th>
      <th>Actions</th>
    </tr>

    <tbody>
      <% @articles.each do |article|%>
      <tr>
        <td><%= article.title %></td>
        <td><%=article.description %></td>
<td><%= button_to 'Delete', article_path(article), method: :delete %></td>  
      <% end %>
    </tbody>
  </thead>
</table>